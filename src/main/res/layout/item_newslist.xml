<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    app:cardCornerRadius="4dp"
    app:cardElevation="4dp">

    <RelativeLayout
        style="@style/baselayoutpara">

        <ImageView
            android:id="@+id/iv_pre"
            android:layout_width="95dp"
            android:layout_height="95dp"
            android:layout_alignParentLeft="true"
            android:layout_margin="10dp"
            android:background="@drawable/ic_launcher" />
        <ImageView
            android:id="@+id/iv_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:background="@drawable/ic_card_overflow" />
        <TextView
            android:id="@+id/news_topic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_toLeftOf="@id/iv_share"
            android:layout_toRightOf="@id/iv_pre"
            android:text="你是我生啥法师打发放大放大帅哥发光法"
            android:textSize="17sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/news_brief"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_toLeftOf="@id/iv_share"
            android:layout_toRightOf="@id/iv_pre"
            android:layout_below="@id/news_topic"
            android:text="你是我生啥法师打发放大放大帅哥发光sfgfgsgdsfgsdfgf法"
            android:textSize="12sp"
             />


    </RelativeLayout>
</android.support.v7.widget.CardView>